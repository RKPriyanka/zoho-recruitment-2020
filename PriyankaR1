
#include<iostream>
using namespace std;
int main()
{
	string word;
	cin>>word;
	for(int i = 0; i<= word.length(); i++)
	{
		for(int j = word.length() - 1; j>= 0 ; j--)
		{
		    if(i == j || j < word.length()/2)
		    {
			cout<<word[j]<<"\t";
		    }
		    else
		        cout<<"\t";
		}
		cout<<"\n";
	}
}
